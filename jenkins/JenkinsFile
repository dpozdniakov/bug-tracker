pipeline {
    agent any

    stages {
        stage('Utit tests - Backend') {
            agent{
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            environment {
                GOCACHE = '/tmp/.cache/go-build'
                HOME = '/tmp'
                GOPATH = '/tmp/go'
                GOMODCACHE = '/tmp/go/pkg/mod'
            }
            steps {
                dir('bugtracker-backend') {
                    sh '''
                      mkdir -p "$GOCACHE" "$GOMODCACHE" "$GOPATH/pkg/mod/cache/download"
                      export HOME=/tmp
                      # verify envs (optional)
                      go env GOPATH GOMODCACHE GOCACHE
                      GOCACHE=$GOCACHE GOPATH=$GOPATH GOMODCACHE=$GOMODCACHE HOME=$HOME go test -v ./...
                    '''
                }
            }
        }

        stage('Unit tests - Frontend') {
            agent{
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-frontend') {
                    sh '''
                    npm ci
                    npm test
                    '''
                }
            }
        }
    }
}