pipeline {
    agent any

    stages {
        stage('Utit tests - Backend') {
            agent{
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            environment {
                GOCACHE = '/tmp/.cache/go-build'
                HOME = '/tmp'
            }
            steps {
                dir('bugtracker-backend') {
                    sh '''
                      mkdir -p "$GOCACHE"
                      export HOME=/tmp
                      GOCACHE=$GOCACHE go test -v ./...
                    '''
                }
            }
        }
    }
}